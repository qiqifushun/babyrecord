<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qiqi.babyrecord"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:name="com.qiqi.babyrecord.BabyRecordApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.qiqi.babyrecord.activity.Welcome"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.qiqi.babyrecord.activity.BabyInfoEditActivity"
            android:label="@string/baby_info" >
        </activity>
        <activity
            android:name="com.qiqi.babyrecord.activity.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.qiqi.babyrecord.activity.BabyInfoActivity"
            android:label="@string/baby_info" >
        </activity>
        <activity
            android:name="com.qiqi.babyrecord.activity.NewEventActivity"
            android:label="@string/baby_event" >
        </activity>
    </application>

</manifest>